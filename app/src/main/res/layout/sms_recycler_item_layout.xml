<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue" />

                <TextView
                    android:id="@+id/receivedDateTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:gravity="end"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <!-- First set of ImageView and CheckMark -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/receivedMobile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/img1"/>

                <ImageView
                    android:id="@+id/receivedMobileCheckMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/check_mark"
                    android:visibility="invisible" />
                <ImageView
                    android:id="@+id/receivedMobileFailedMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/failed_icon"
                    android:visibility="invisible" />
                <ImageView
                    android:id="@+id/receivedMobileLoadingMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/in_process"
                    android:visibility="invisible" />

            </FrameLayout>

            <!-- Second set of ImageView and CheckMark -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/UploadServer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/img2"/>

                <ImageView
                    android:id="@+id/UploadServerCheckMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/check_mark"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/UploadServerFailedMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/failed_icon"
                    android:visibility="invisible" />
                <ImageView
                    android:id="@+id/UploadServerLoadingMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/in_process"
                    android:visibility="invisible" />

            </FrameLayout>

            <!-- Third set of ImageView and CheckMark -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/receiveServer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:paddingTop="3dp"
                    android:src="@drawable/img3" />

                <ImageView
                    android:id="@+id/receiveServerCheckMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/check_mark"
                    android:visibility="invisible" />
                <ImageView
                    android:id="@+id/receiveServerFailedMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/failed_icon"
                    android:visibility="invisible" />
                <ImageView
                    android:id="@+id/receiveServerLoadingMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/in_process"
                    android:visibility="invisible" />


            </FrameLayout>

            <!-- Fourth set of ImageView and CheckMark -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sentMobile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:paddingTop="3dp"
                    android:alpha="1"
                    android:src="@drawable/img4" />

                <ImageView
                    android:id="@+id/sentMobileCheckMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/check_mark"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/sentMobileFailedMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/failed_icon"
                    android:visibility="invisible" />
                <ImageView
                    android:id="@+id/sentMobileLoadingMark"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/in_process"
                    android:visibility="invisible" />


            </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green"
                    android:text="@string/completed_4_messages"
                    android:visibility="invisible"
                    android:textStyle = "bold"
                    android:textFontWeight="400"
                    android:layout_margin="5dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="5dp"/>
                    <TextView
                        android:id="@+id/receivingMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/receiving_from_mobile"
                        android:visibility="invisible"
                        android:textStyle = "bold"
                        android:textFontWeight="400"
                        android:layout_margin="5dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="5dp"/>
                    <TextView
                        android:id="@+id/uploadingServer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uploading_to_server"
                        android:visibility="invisible"
                        android:textStyle = "bold"
                        android:textFontWeight="400"
                        android:layout_margin="5dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="5dp"/>
                    <TextView
                        android:id="@+id/receivingServer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/receiving_from_server"
                        android:visibility="invisible"
                        android:textStyle = "bold"
                        android:textFontWeight="400"
                        android:layout_margin="5dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="5dp"/>
                    <TextView
                        android:id="@+id/sendingMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:textStyle = "bold"
                        android:textFontWeight="400"
                        android:layout_margin="5dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="5dp"/>
                </FrameLayout>
                
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
